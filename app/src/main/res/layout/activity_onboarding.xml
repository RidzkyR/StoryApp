<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dicoding_color"
    tools:context=".view.onboarding.OnboardingActivity">

    <ImageView
        android:id="@+id/ic_cloud_top_left"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:alpha="0"
        android:src="@drawable/ic_cloud_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cloud_top_right"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:alpha="0"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_cloud_right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_onboarding_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0"
        android:src="@drawable/ic_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_cloud_bottom"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:alpha="0"
        android:src="@drawable/ic_cloud"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708" />

    <ImageView
        android:id="@+id/plane1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        app:layout_constraintBottom_toTopOf="@id/iv_cloud_bottom"
        app:layout_constraintEnd_toStartOf="@id/iv_onboarding_icon"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_cloud_top_left"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/plane2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        app:layout_constraintBottom_toTopOf="@id/iv_cloud_bottom"
        app:layout_constraintEnd_toStartOf="@id/iv_onboarding_icon"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_cloud_top_left"
        app:layout_constraintVertical_bias="0.904" />

    <ImageView
        android:id="@+id/plane3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        app:layout_constraintBottom_toTopOf="@id/iv_cloud_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.821"
        app:layout_constraintStart_toEndOf="@id/iv_onboarding_icon"
        app:layout_constraintTop_toBottomOf="@id/ic_cloud_top_left"
        app:layout_constraintVertical_bias="0.117" />

    <ImageView
        android:id="@+id/plane4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_plane"
        app:layout_constraintBottom_toTopOf="@id/iv_cloud_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@id/iv_onboarding_icon"
        app:layout_constraintTop_toBottomOf="@id/ic_cloud_top_left"
        app:layout_constraintVertical_bias="0.904" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        android:gravity="center"
        android:text="Start Your Stories Here"
        android:textColor="#8AFFFFFF"
        app:layout_constraintBottom_toTopOf="@id/button_boarding_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_boarding_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0"
        android:backgroundTint="@color/dicoding_secondary_color"
        android:text="Log In"
        app:layout_constraintBottom_toTopOf="@id/button_boarding_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_boarding_signup"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:alpha="0"
        android:text="Sign Up"
        android:textColor="@color/dicoding_secondary_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/dicoding_secondary_color" />

</androidx.constraintlayout.widget.ConstraintLayout>